@{
    ViewData["Title"] = "Home Page";
}
@model RESTauranter.Models.Restaurant
<h1>Write a new Review:</h1>
<form asp-action="createReview" asp-controller="Home" method="post">

    <span asp-validation-for="ReviewerName"></span>
    <br>
    <label>Reviewer Name:</label>
    <input asp-for="ReviewerName" class="form-control">
    <br>

    <span asp-validation-for="RestaurantName"></span>
    <br>
    <label>Restaurant Name:</label>
    <input asp-for="RestaurantName" class="form-control">
    <br>

    <span asp-validation-for="Review"></span>
    <br>
    <label>Review:</label>
    <input asp-for="Review" class="form-control">
    <br>

    <span asp-validation-for="DateVisit"></span>
    <br>
    <label>Date of Visit:</label>
    <input asp-for="DateVisit" type="date" class="form-control">
    <br>

    <span asp-validation-for="Stars"></span>
    <br>
    <label>Stars:</label>
    <select asp-for="Stars">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>

    <button class="btn btn-info" type="submit">SUBMIT</button>

</form>
<br>
<form action="/reviews">
    <button>ALL REVIEWS</button>
</form>